<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <Switch
                android:id="@+id/switch_rotation_mode"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#bb333333"
                android:textOff="OFF"
                android:textOn="ON"
                android:text="DownSample When Rotate ON/OFF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/switch_rotation_mode"
                android:layout_alignRight="@id/switch_rotation_mode"
                android:layout_below="@id/switch_rotation_mode"
                android:background="#33333333" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <Switch
                android:id="@+id/switch_check_mode"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#bb333333"
                android:textOff="OFF"
                android:textOn="ON"
                android:text="Check Mode ON/OFF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/switch_check_mode"
                android:layout_alignRight="@id/switch_check_mode"
                android:layout_below="@id/switch_check_mode"
                android:background="#33333333" />

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>